<h2>プロフィール編集</h2>
<%= form_with model: @user, local: true do |f| %>
  <div class="field">
    <label for="inputName">名前</label>
    <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %>
  </div>
  <div class="field">
    <label for="inputImage">プロファイル画像</label>
    <%= f.file_field :profile_image, id: "inputImage", accept: "image/*" %>
  </div>

  <%= f.submit "変更を保存" %>
<% end %>
